{
  "builds": [
    {
      "src": "my_app/backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "my_app/react/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "my_app/backend/app.py"
    },
    {
      "source": "/(.*)",
      "destination": "/my_app/react/$1"
    }
  ]
}
